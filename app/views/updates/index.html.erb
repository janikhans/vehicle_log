<div class="container"><p id="notice"><%= notice %></p>

<h1>Listing Updates</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Mileage</th>
      <th>Comment</th>
      <th>Vehicle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @updates.each do |update| %>
      <tr>
        <td><%= update.date %></td>
        <td><%= update.mileage %></td>
        <td><%= update.comment %></td>
        <td><%= update.vehicle %></td>
        <td><%= link_to 'Show', update %></td>
        <td><%= link_to 'Edit', edit_update_path(update) %></td>
        <td><%= link_to 'Destroy', update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag new_update_path, method: :get do %>
  <%= select_tag :service_id, options_from_collection_for_select(Service.all, :id, :name) %>
  <%= submit_tag "New Update", name: nil %>
<% end %>

<%= link_to 'New Update', new_update_path %>
</div>